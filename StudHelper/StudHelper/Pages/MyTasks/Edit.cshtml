            </div>
            <div class="form-group">
                <label asp-for="Task.Description" class="control-label"></label>
                <textarea asp-for="Task.Description" id="userInput" rows=" 5" cols=" 90" class=" form-control"></textarea>
                <span asp-validation-for="Task.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.MinPrice" class="control-label"></label>
