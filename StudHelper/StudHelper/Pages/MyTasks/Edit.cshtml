                <span asp-validation-for="Task.MinPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.MaxPrice" class="control-label"></label>
                <input asp-for="Task.MaxPrice" class="form-control" />
                <span asp-validation-for="Task.MaxPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Task.Status" class="control-label"></label>
                <input asp-for="Task.Status" class="form-control" />
                <span asp-validation-for="Task.Status" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Task.EmployerReviewDescr" class="control-label"></label>
                <input asp-for="Task.EmployerReviewDescr" class="form-control" />
                <span asp-validation-for="Task.EmployerReviewDescr" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Task.EmployeeReviewDescr" class="control-label"></label>
                <input asp-for="Task.EmployeeReviewDescr" class="form-control" />
                <span asp-validation-for="Task.EmployeeReviewDescr" class="text-danger"></span>
            </div>
            <div class="form-group d-none">
                <label asp-for="Task.EmployerRating" class="control-label"></label>
                <input asp-for="Task.EmployerRating" class="form-control" />
