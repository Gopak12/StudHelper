            </div>
            <div class="form-group d-none">
                <label asp-for="Task.EmployeeRating" class="control-label"></label>
                <input asp-for="Task.EmployeeRating" class="form-control" />
                <span asp-validation-for="Task.EmployeeRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

