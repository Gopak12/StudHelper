@model StudHelper.Pages.MyTasks.EditModel

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Task.Id" />
            <div class="form-group d-none">
                <label asp-for="Task.EmployerId" class="control-label"></label>
